<!DOCTYPE html>
<html dir="ltr" lang="en-US">

<head>

    <meta http-equiv="X-UA-Compatible" content="IE=edge" charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta name="Keywords" content="">

    <meta name="Description" content="">


    <!-- Stylesheets
    ============================================= -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style-all.css" type="text/css" />

    <link rel="shortcut icon" href="favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <!-- External JavaScripts
    ============================================= -->
    <script type="text/javascript" src="js/jquery.js"></script>
    <script type="text/javascript" src="js/plugins.js"></script>


    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "//hm.baidu.com/hm.js?8f6f6a44f08006c8bf1f485c0c1da1af";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>

    <!-- Document Title
    ============================================= -->
    <title>新闻时讯 成都赤晓</title>


</head>

<body class="stretched">

    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">

        <!-- Header
        ============================================= -->
        <header id="header" class="page-section full-header">

            <div id="header-wrap">

                <div class="container clearfix">

                    <div id="primary-menu-trigger"><i class="fa fa-reorder"></i></div>

                    <!-- Logo
                    ============================================= -->
                    <!-- #logo end -->

                    <% include nav.ejs %>

                </div>

            </div>

        </header><!-- #header end -->
        <section id="content" style="background-color:#222222;color:#fff">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div id="side-navigation">
                        <% include ./newLeft.ejs %>

                    </div>

                    <!-- Post Content
                    ============================================= -->
                    <div class="postcontent nobottommargin col_last clearfix">

                        <!-- Posts
                        ============================================= -->
                        <div id="posts" class="small-thumbs">



                            <% for(var i in post.newsArray){ %>
                                <div class="entry clearfix">
                                        <div class="entry-image">
                                                <a href="/news/<%=post.newsArray[i].id %>" target="_blank"><img
                                                        class="image_fade" src="<%=post.newsArray[i].frame %>"
                                                        ></a>
                                            </div>
                                        <div class="entry-c">
                                            <div class="entry-title">
                                                <h2><a href="/news/<%=post.newsArray[i].id %>"
                                                        target="_blank"> <%=post.newsArray[i].title %></a></h2>
                                            </div>
                                            <ul class="entry-meta clearfix">
                                                <li><i class="fa fa-calendar3"></i> <%=post.newsArray[i].time %></li>
        
                                            </ul>
                                            <div class="entry-content">
                                                <p> <%=post.newsArray[i].description %>...
                                                </p>
                                                <a href="/news/<%=post.newsArray[i].id %>" class="more-link"
                                                    target="_blank">点击查看</a>
                                            </div>
                                        </div>
                                    </div>
                            <% } %>
                        </div>

                    </div>








                </div>

            </div>

        </section><!-- #content end -->




        <% include ./footer.ejs %>
    </div><!-- #wrapper end -->

    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="fa fa-angle-up"></div>

    <!-- Footer Scripts
    ============================================= -->
    <script type="text/javascript" src="js/functions.js"></script>

</body>

</html>