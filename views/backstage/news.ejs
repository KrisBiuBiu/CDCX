<!DOCTYPE html>
<!--[if lt IE 7 ]><html lang="en" class="ie6 ielt7 ielt8 ielt9"><![endif]--><!--[if IE 7 ]><html lang="en" class="ie7 ielt8 ielt9"><![endif]--><!--[if IE 8 ]><html lang="en" class="ie8 ielt9"><![endif]--><!--[if IE 9 ]><html lang="en" class="ie9"> <![endif]--><!--[if (gt IE 9)|!(IE)]><!--> 
<html lang="en"><!--<![endif]--> 
	<head>
		<meta charset="utf-8">
		<title>Files - Akira</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
		<link href="/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
		<link href="/bootstrap/css/site.css" rel="stylesheet">
		<!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
	</head>
	<body>
		<div class="container">
			<div class="row">
					<% include ./backLeft.ejs %>
				<div class="span9">
					<h1>
						新闻列表
					</h1>
					<ul class="files zebra-list">
            <% var newsArray = post.newsArray %>
            <% for(var a in newsArray) { %>
              <li>
                <p>
                    <i class="icon-file"></i> <a class="title" href="#"><%=newsArray[a].title %></a> <span class="meta"><%=newsArray[a].description %></span> 
                </p>
                <p style="padding-left:18px">
                  <button id="<%=newsArray[a].id %>" onclick="delNews(this)">删除</button>
                </p>
              </li>
            <% } %>
					</ul>
					<a class="toggle-link" href="#new-file"><i class="icon-plus"></i> 添加一条新闻</a>
					<div id="new-file" class="form-horizontal hidden">
						<fieldset>
							<legend>New</legend>
							<div class="control-group">
								<label class="control-label" for="textarea">新闻标题</label>
								<div class="controls">
									<input type="text" class="input-xlarge" id="input01" />
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="textarea">新闻时间</label>
								<div class="controls">
									<input type="text" class="input-xlarge" id="input02" />
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="textarea">新闻简讯</label>
								<div class="controls">
									<textarea name=""  cols="30" rows="10" style="width: 90%" id="input03"></textarea>
								</div>
							</div>
							<div class="control-group">
								<% include ../ueditor/ueditor.ejs %>
              </div>
              <div style="height: 200px;overflow: auto;">
                <ul class="thumbnails">
                  <% var imgArray = post.imgArray %>
                  <% for(var i in imgArray) { %>
                    <li class="span2">
                        <a href="#" class="thumbnail">
                          <img src="/upload/<%=imgArray[i].id%>.<%=imgArray[i].ext%>" alt="" onclick="insertImg(this)">
                        </a>
                      </li>
                  <% } %>
                </ul>
              </div>
							<div class="form-actions">
								<button type="submit" class="btn btn-primary" onclick="postNew()">Upload</button> 
							</div>
						</fieldset>
					</div>
				</div>
			</div>
		</div>
		<script src="/bootstrap/js/jquery.min.js"></script>
		<script src="/bootstrap/js/bootstrap.min.js"></script>
		<script src="/bootstrap/js/site.js"></script>
		<script src="/js/index.js"></script>
	</body>
</html>
