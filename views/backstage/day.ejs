<!DOCTYPE html>
<!--[if lt IE 7 ]><html lang="en" class="ie6 ielt7 ielt8 ielt9"><![endif]--><!--[if IE 7 ]><html lang="en" class="ie7 ielt8 ielt9"><![endif]--><!--[if IE 8 ]><html lang="en" class="ie8 ielt9"><![endif]--><!--[if IE 9 ]><html lang="en" class="ie9"> <![endif]--><!--[if (gt IE 9)|!(IE)]><!--> 
<html lang="en"><!--<![endif]--> 
	<head>
		<meta charset="utf-8">
		<title>Activity - Akira</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
		<link href="/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
		<link href="/bootstrap/css/site.css" rel="stylesheet">
		<!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
	</head>
	<body>
		<div class="container">
			<div class="row">
        <% include ./backLeft.ejs %>
				<div class="span9">
					<h1>
						Activity
          </h1>
          <div class="pagination">
            <ul>
                <li>
                  <a href="/backstage/day/1">1</a>
                </li>
                <li>
                  <a href="/backstage/day/2">2</a>
                </li>
                <li>
                  <a href="/backstage/day/3">3</a>
                </li>
                <li>
                  <a href="/backstage/day/4">4</a>
                </li>
                <li>
                  <a href="/backstage/day/5">5</a>
                </li>
                <li>
                  <a href="/backstage/day/6">6</a>
                </li>
                <li>
                  <a href="/backstage/day/7">7</a>
                </li>
                <li>
                  <a href="/backstage/day/8">8</a>
                </li>
                <li>
                  <a href="/backstage/day/9">9</a>
                </li>
                <li>
                  <a href="/backstage/day/10">10</a>
                </li>
                <li>
                  <a href="/backstage/day/11">11</a>
                </li>
                <li>
                  <a href="/backstage/day/12">12</a>
                </li>
            </ul>
          </div>
          <table class="table table-bordered table-striped" id="dayTable">
						<thead>
							<tr>
								<th style="width: 150px">
									Date
								</th>
								<th>
									Content
								</th>
							</tr>
						</thead>
						<tbody>
              <% for(var i=1;i <= post.dayCounts;i++){ %>
							<tr>
                <% var dateStamp = post.year+"-"+post.month+"-"+i %>
								<td class="date">
									<%=post.year %>-<%=post.month %>-<%=i%>
                </td>
                <% var content="" %>
                <% for(var a=0;a < post.dayArray.length;a++){ %>
                  <% if(post.dayArray[a].date == dateStamp) { %>
                    <% content = post.dayArray[a].content %>
                  <% } %>
                <% } %>
                <td>
                  <input type="text" class="content" value="<%=content %>" style="width: 90%">
                </td>
              </tr>
              <% } %>
						</tbody>
					</table>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary" onclick="postDay()">Upload</button> 
          </div>
				</div>
			</div>
		</div>
		<script src="/bootstrap/js/jquery.min.js"></script>
		<script src="/bootstrap/js/bootstrap.min.js"></script>
		<script src="/bootstrap/js/site.js"></script>
		<script src="/js/index.js"></script>
	</body>
</html>
